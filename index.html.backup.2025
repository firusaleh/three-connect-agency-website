<style>
    /* Preloader mit moderneren Effekten */
    .preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: opacity 0.5s ease-out;
    }
    
    .loader {
        text-align: center;
        max-width: 80%;
    }
    
    .loader-inner {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 3rem;
    }
    
    .loader-logo {
        font-size: 5rem;
        font-weight: 800;
        opacity: 0;
        animation: fadeIn 1s ease forwards 0.5s, floatAnimation 4s ease-in-out infinite;
        position: relative;
        color: var(--text-light);
    }
    
    .loader-logo::before {
        content: '';
        position: absolute;
        top: -30px;
        left: -30px;
        right: -30px;
        bottom: -30px;
        background: radial-gradient(circle, rgba(52, 152, 219, 0.2), transparent 70%);
        animation: pulsate 2s ease-in-out infinite;
        border-radius: 50%;
        z-index: -1;
    }
    
    .loader-logo .accent {
        color: var(--accent-color);
        position: relative;
    }
    
    .loader-logo .accent::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 3px;
        background: var(--accent-color);
        transform: scaleX(0);
        transform-origin: left;
        animation: lineExpand 2s ease forwards 1.2s;
    }
    
    .loader-progress {
        width: 25rem;
        height: 4px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        overflow: hidden;
        opacity: 0;
        animation: fadeIn 1s ease forwards 1s;
        position: relative;
    }
    
    .loader-progress span {
        display: block;
        width: 0;
        height: 100%;
        background: var(--accent-gradient);
        border-radius: 4px;
        animation: progress 2s ease forwards 1.2s;
        position: relative;
    }
    
    .loader-progress span::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: shimmer 1.5s infinite;
    }
    
    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
    
    @keyframes progress {
        0% {
            width: 0;
        }
        50% {
            width: 70%;
        }
        80% {
            width: 85%;
        }
        to {
            width: 100%;
        }
    }
    
    @keyframes shimmer {
        from {
            transform: translateX(-100%);
        }
        to {
            transform: translateX(100%);
        }
    }
    
    @keyframes lineExpand {
        to {
            transform: scaleX(1);
        }
    }
    
    @keyframes floatAnimation {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    
    @keyframes pulsate {
        0%, 100% {
            transform: scale(1);
            opacity: 0.5;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.3;
        }
    }
    </style>

