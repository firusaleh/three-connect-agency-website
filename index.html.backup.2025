        border-radius: var(--border-radius-md);
        padding: 3.5rem;
        position: relative;
        z-index: 2;
    }
    
    .footer-newsletter h3 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--text-light);
    }
    
    .footer-newsletter p {
        color: var(--text-muted);
        margin-bottom: 2.5rem;
        font-size: 1.5rem;
        line-height: 1.7;
    }
    
    .newsletter-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .newsletter-field {
        display: flex;
        border-radius: var(--border-radius-md);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
    }
    
    .newsletter-field input {
        flex: 1;
        padding: 1.5rem 2rem;
        font-size: 1.6rem;
        border: none;
        background-color: rgba(255, 255, 255, 0.05);
        color: var(--text-light);
    }
    
    .newsletter-field input::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }
    
    .btn-newsletter {
        width: 5rem;
        background: var(--accent-gradient);
        border: none;
        color: white;
        font-size: 1.8rem;
        cursor: pointer;
        transition: var(--transition-fast);
    }
    
    .btn-newsletter:hover {
        background: linear-gradient(to right, var(--accent-color), var(--accent-hover));
    }
    
    .newsletter-consent {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        font-size: 1.3rem;
        color: var(--text-muted);
    }
    
    .newsletter-consent input {
        margin-top: 0.3rem;
    }
    
    .newsletter-consent a {
        color: var(--accent-color);
        text-decoration: underline;
        transition: var(--transition-fast);
    }
    
    .newsletter-consent a:hover {
        color: var(--text-light);
    }
    
    /* Footer Bottom */
    .footer-bottom {
        background-color: rgba(0, 0, 0, 0.2);
        padding: 2rem 0;
        position: relative;
        z-index: 2;
    }
    
    .footer-bottom .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .copyright {
        font-size: 1.4rem;
        color: var(--text-muted);
    }
    
    .footer-languages {
        display: flex;
        gap: 1.5rem;
    }
    
    .footer-languages a {
        color: var(--text-muted);
        font-size: 1.4rem;
        font-weight: 500;
        transition: var(--transition-fast);
    }
    
    .footer-languages a.active,
    .footer-languages a:hover {
        color: var(--accent-color);
    }
    
    /* Cookie Consent Banner */
    .cookie-consent {
        position: fixed;
        bottom: 2rem;
        left: 2rem;
        right: 2rem;
        background: linear-gradient(145deg, rgba(30, 30, 40, 0.95), rgba(20, 20, 30, 0.95));
        backdrop-filter: blur(10px);
        border: 1px solid rgba(52, 152, 219, 0.2);
        border-radius: var(--border-radius-md);
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
        z-index: 999;
        display: none; /* Initially hidden, shown via JS */
        transform: translateY(20px);
        opacity: 0;
        transition: all 0.5s var(--easing);
    }
    
    .cookie-consent.active {
        transform: translateY(0);
        opacity: 1;
    }
    
    .cookie-content {
        display: flex;
        align-items: center;
        gap: 3rem;
    }
    
    .cookie-text {
        flex: 1;
    }
    
    .cookie-text h3 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-light);
    }
    
    .cookie-text p {
        font-size: 1.5rem;
        color: var(--text-muted);
        line-height: 1.7;
    }
    
    .cookie-text a {
        color: var(--accent-color);
        text-decoration: underline;
        transition: var(--transition-fast);
    }
    
    .cookie-text a:hover {
        color: var(--text-light);
    }
    
    .cookie-actions {
        display: flex;
        gap: 1.5rem;
    }
    
    .cookie-btn {
        white-space: nowrap;
    }
    
    /* Back to Top Button */
    .back-to-top {
        position: fixed;
        bottom: 3rem;
        right: 3rem;
        width: 5rem;
        height: 5rem;
        background: var(--accent-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        box-shadow: var(--shadow-md);
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px);
        transition: all 0.5s var(--easing);
        z-index: 99;
    }
    
    .back-to-top.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }
    
    .back-to-top:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg), var(--shadow-glow);
    }
    
    /* Responsive Styles */
    @media (max-width: 1200px) {
        .footer-grid {
            gap: 3rem;
        }
        
        .cookie-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 2rem;
        }
    }
    
    @media (max-width: 992px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
        }
        
        .footer-about {
            grid-column: 1 / -1;
        }
        
        .footer-newsletter {
            padding: 3rem;
        }
    }
    
    @media (max-width: 768px) {
        .footer-bottom .container {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
        }
        
        .cookie-actions {
            flex-direction: column;
            width: 100%;
        }
        
        .cookie-btn {
            width: 100%;
        }
        
        .back-to-top {
            right: 2rem;
            bottom: 2rem;
            width: 4.5rem;
            height: 4.5rem;
        }
    }
    
    @media (max-width: 576px) {
        .footer-grid {
            grid-template-columns: 1fr;
        }
        
        .footer-newsletter {
            padding: 2.5rem 2rem;
        }
        
        .social-links {
            justify-content: center;
        }
        
        .footer-col h3 {
            text-align: center;
        }
        
        .footer-col h3::after {
            left: 50%;
            transform: translateX(-50%);
        }
        
        .footer-about p {
            text-align: center;
        }
        
        .footer-links a {
            justify-content: center;
        }
        
        .footer-contact p {
            justify-content: center;
        }
        
        .cookie-consent {
            left: 1rem;
            right: 1rem;
            bottom: 1rem;
            padding: 2rem 1.5rem;
        }
    }</style>
    
    <!-- JavaScript-Dateien -->
    <script src="js/main.js"></script>
    <script src="js/video-handling.js"></script>
    <script src="js/animation-effects.js"></script>
    <script src="js/compatibility-fixes.js"></script>
    <script src="js/projects-tabs.js"></script>
    <script src="js/process-video-handler.js"></script>
</body>
